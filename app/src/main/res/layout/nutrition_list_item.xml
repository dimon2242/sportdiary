<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    app:cardElevation="2dp"
                                    app:cardCornerRadius="0dp"
                                    app:cardUseCompatPadding="true"
                                    android:layout_marginLeft="-3dp"
                                    android:layout_marginRight="-3dp"
                                    android:layout_marginBottom="-3dp"
                                    android:layout_marginTop="-3dp"
                                    android:clickable="true"
                                    android:foreground="?attr/selectableItemBackground"
                                    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nutritions_day_list_item_date_text_view"
            tools:text="12 февраля 2017, 12:00"
            android:textSize="20sp"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/nutritions_day_list_item_associated_day_text_view"
            tools:text="Связан с тренировкой в 12:00/Нет связанных тренировок"
            android:layout_weight="1"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/nutritions_day_list_item_summary_energy"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/nutritions_day_list_item_summary_energy_text_view"
                tools:text="20 ККал"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>